<Window x:Class="TalkzClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalkzClient"
        xmlns:s="clr-namespace:TalkzClient.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <s:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Answer}" Width="80"/>
            <Button Height="30" Width="80" Content="Anfrage" Command="{Binding AnfrageCommand}"/>
        </StackPanel>

    </Grid>
</Window>
